pipeline {
  agent any
  stages {
    stage ('Build') {
      steps {
        sh 'mvn clean compile package'
      }
    }
    stage ('login') {
      steps {
        withCredentials([usernamePassword(credentialsId: 'tomcat2', usernameVariable: 'USER', passwordVariable: 'PASSWORD')])
			{
				sh 'docker login --username $USER --password $PASSWORD'
        sh 'echo login successful'
			}
  
      }
    }
  }
}
